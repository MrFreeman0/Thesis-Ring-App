<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
            android:useLevel="true"
            >
            <gradient android:type="linear"
                android:centerColor="@color/colorOuterRingStart"
                android:startColor="@color/colorOuterRingEnd"
                android:endColor="@color/colorOuterRingEnd"
                android:angle="90"/>
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#000000"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="3dp"
                android:top="3dp"
                android:left="3dp"
                android:right="3dp"/>
        </shape>
    </item>
</layer-list>