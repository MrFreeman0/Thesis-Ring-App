<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <gradient android:type="linear" android:centerColor="#cc202020" android:startColor="#cc808080" android:endColor="#cc808080" android:angle="90" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="@color/colorOutline" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <padding android:bottom="3dp" android:top="3dp" android:left="3dp" android:right="3dp" />
        </shape>
    </item>
</layer-list>
